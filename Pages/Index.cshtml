@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}
<!DOCTYPE html>
<html>

<body>
    <div id="sidebar">
        <ul>
            <li>
                <a href="#home" class="logo">
                    <span class="icon"><i class="fa-solid fa-co"></i>
                        <span class="text">Iron Man Fit</span>
                </a>
            </li>
            <li>
                <a href="#home">
                    <span class="icon"><i class="fa-solid fa-house"></i>
                        <span class="text">Home</span>
                </a>
            </li>
            <li>
                <a href="#home">
                    <span class="icon"><i class="fa-solid fa-user"></i>
                        <span class="text">Profile</span>
                </a>
            </li>
            <li>
                <a href="#start-workout">
                    <span class="icon"><i class="fa-solid fa-running"></i>
                        <span class="text">Start Workout</span>
                </a>
            </li>
            <li>
                <a href="#past-workouts">
                    <span class="icon"><i class="fa-solid fa-clock"></i>
                        <span class="text">Past Workouts</span>
                </a>
            </li>
            <li>
                <a href="#routines">
                    <span class="icon"><i class="fa-solid fa-bullseye"></i>
                        <span class="text">Routines</span>
                </a>
            </li>
            <li>
                <a href="#home">
                    <span class="icon"><i class="fa-solid fa-sign-out"></i>
                        <span class="text">Logout</span>
                </a>
            </li>
        </ul>
    </div>
    <div id="main-content">
        <div id="past-workouts" class="content-section">
            <h2>Past Workouts</h2>
            <table id="past-workouts-table" class="table">
                <thead>
                    <tr>
                        <th>Date</th>
                        <th>Excercise</th>
                        <th>Duration (minutes)</th>
                        <th>Distance (miles)</th>
                    </tr>
                </thead>
                <tbody id="workout-list">

                </tbody>
            </table>
        </div>

        <div id="start-workout" class="content-section">
            <h2>Start Workout</h2>
            <form id="workout-form">
                <div class="form-group">
                    <label for="exercise-type">Exercise Type:</label>
                    <input type="text" class="form-control" id="exercise-type" placeholder="Enter exercise type"
                        required>
                </div>
                <div class="form-group">
                    <label for="duration">Duration (minutes):</label>
                    <input type="number" class="form-control" id="duration" placeholder="Enter duration" required>
                </div>
                <div class="form-group">
                    <label for="distance">Distance (miles):</label>
                    <input type="number" class="form-control" id="distance" placeholder="Enter distance">
                </div>
                <div class="form-group">
                    <label for="date">Date:</label>
                    <input type="date" class="form-control" id="date" required>
                </div>
                <button type="submit" class="btn btn-primary">Submit</button>
            </form>
        </div>
        <div id="routines" class="content-section">
            <h2>Routines</h2>

            <!-- Form for creating a new routine -->
            <form id="create-routine-form">
                <div class="form-group">
                    <label for="routine-name">Routine Name:</label>
                    <input type="text" class="form-control" id="routine-name" placeholder="Enter routine name" required>
                </div>
                <div class="form-group">
                    <label for="exercise-list">Exercises:</label>
                    <textarea class="form-control" id="exercise-list" placeholder="Enter exercises (one per line)"
                        required></textarea>
                </div>
                <button type="submit" class="btn btn-primary">Create Routine</button>
            </form>

            <!-- Display user-created routines here -->
            <div id="user-routines">
                <!-- User-created routines will be dynamically added here -->
            </div>
        </div> 

    </div>

</body>

</html>