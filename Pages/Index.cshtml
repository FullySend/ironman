@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}
<!DOCTYPE html>
<html>

<body>
    <div id="sidebar">
        <div class="sidebar-header">
            <h2>Fitness Tracker</h2>
            <p>Welcome, [User Name]!</p>
        </div>
        <div class="character-stats">
            <p>Strength: <span id="strength">10</span></p>
            <p>Agility: <span id="agility">8</span></p>
            <p>Stamina: <span id="stamina">12</span></p>
        </div>
        <h2></h2>
        <ul>
            <li><a href="">Home</a></li>
            <li><a href="#past-workouts">Past Workouts</a></li>
            <li><a href="#start-workout">Start Workout</a></li>
            <li><a href="#goals">My Goals</a></li>
        </ul>
    </div>

    <div id="main-content">
        <div id="past-workouts" class="content-section">
            <h2>Past Workouts</h2>
            <table id="past-workouts-table" class="table">
                <thead>
                    <tr>
                        <th>Date</th>
                        <th>Excercise</th>
                        <th>Duration (minutes)</th>
                        <th>Distance (miles)</th>
                    </tr>
                </thead>
            <tbody id="workout-list">

            </tbody>
            </table>
        </div>

        <div id="start-workout" class="content-section">
            <h2>Start Workout</h2>
            <form id="workout-form">
                <div class="form-group">
                    <label for="exercise-type">Exercise Type:</label>
                    <input type="text" class="form-control" id="exercise-type" placeholder="Enter exercise type"
                        required>
                </div>
                <div class="form-group">
                    <label for="duration">Duration (minutes):</label>
                    <input type="number" class="form-control" id="duration" placeholder="Enter duration" required>
                </div>
                <div class="form-group">
                    <label for="distance">Distance (miles):</label>
                    <input type="number" class="form-control" id="distance" placeholder="Enter distance">
                </div>
                <div class="form-group">
                    <label for="date">Date:</label>
                    <input type="date" class="form-control" id="date" required>
                </div>
                <button type="submit" class="btn btn-primary">Submit</button>
            </form>
        </div>


    </div>

</body>

</html>